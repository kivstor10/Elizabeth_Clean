<!doctype html>
<html lang="en">
  <head>{% render 'pagefly-head' %}
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href='https://fonts.googleapis.com/css?family=Poppins:800' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Poppins:600' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/b9a0420cc1.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}

    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
    
  </head>
  <body style="background-image: url({{ 'triangle-bg.jpg' | asset_url }})">  
    
    {% section 'header' %}
    <main role="main">

      {{ content_for_layout }}
      
    </main>
    {% section 'footer' %}

  </body>
</html>